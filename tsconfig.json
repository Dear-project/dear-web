{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["src/components/*"],
      "@/hooks/*": ["src/hooks/*"],
      "@constant": ["src/constant/*"],
      "@queries": ["src/queries/*"],
      "@repositories": ["src/repositories/*"],
      "@config": ["src/config/*"],
      "@/libs": ["src/libs/*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "@Typees/images.d.ts",
    "@Types/font.d.ts"
  ],
  "exclude": ["node_modules"]
}
